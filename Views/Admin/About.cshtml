    <script>
        function onChangeTextArea() {
            var text = document.getElementsByClassName('header-txt')[0].textContent;
            var textArea = document.getElementsByClassName('form-control')[0].value;
            console.log(text);
            console.log(textArea);
            document.getElementsByClassName('header-txt')[0].innerHTML = document.getElementsByClassName('form-control')[0].value;
            document.getElementsByClassName('header-txt')[1].innerHTML = document.getElementsByClassName('form-control')[1].value;

        }
    </script>


